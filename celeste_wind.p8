pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
	col1,col2=15,1
	snow = {}
	for i=1,50 do 
		snow[i]={
			x = rnd(132), y = rnd(132)
		}
	end
end
function _update()
	-- Simulate wind
	for i=1,#snow do
        local s = snow[i]
		s.x += (4 - i % 4)
        s.y += sin(time() * 0.25 + i * 0.1)
	end
end
function _draw()
	cls(col2)
	-- draw snow
    for i=1,#snow do
        local s = snow[i]
        circfill(0 + (s.x - 0 * 0.5) % 132 - 2, 0 + (s.y - 0 * 0.5) % 132, i % 2, col1)
    end
end
